<style>
  .news-button-container {
    text-align: left;
    margin: 10px 0;
  }
  .news-button-container button {
    padding: 10px 20px;
    background-color: transparent; /* No background */
    color: black; /* Default color for light mode */
    border: none; /* No border */
    cursor: pointer;
    border-radius: 5px; /* Optional: keep the border radius */
  }
  /* Dark mode styles */
  @media (prefers-color-scheme: dark) {
    .news-button-container button {
      color: white; /* Text color for dark mode */
    }
  }
  /* Light mode styles */
  @media (prefers-color-scheme: light) {
    .news-button-container button {
      color: black; /* Text color for light mode */
    }
  }
  /* Optional: Hover effect */
  .news-button-container button:hover {
    opacity: 0.8; /* Slightly change opacity on hover */
  }
</style>


<div class="news-button-container">
  <button onclick="scrollToNews()">More>>></button>
</div>

<script>
function scrollToNews() {
  const newsSection = document.getElementById('news');
  if (newsSection) {
    newsSection.scrollIntoView({behavior: 'smooth'});
  } else {
    window.location.href = '{{ site.baseurl }}/news/';
  }
}
</script>