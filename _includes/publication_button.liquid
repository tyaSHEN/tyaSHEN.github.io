<style>
  .publication-button-container {
    text-align: center;
    margin: 20px 0;
  }
  .publication-button-container button {
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }
</style>


<div class="publication-button-container">
  <button onclick="scrollToPublications()">View All 12 Publications</button>
</div>

<script>
function scrollToPublications() {
  const publicationsSection = document.getElementById('publications');
  if (publicationsSection) {
    publicationsSection.scrollIntoView({behavior: 'smooth'});
  } else {
    window.location.href = '{{ site.baseurl }}/publications/';
  }
}
</script>